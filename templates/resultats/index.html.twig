{% extends 'base.html.twig' %}

{% block title %}Hello ResultatsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <h3>Les produits achetés par utilisateur</h3>
    <table>
        <thead>
            <tr>
                <th>Utilisateur</th>
                <th>Produit 1</th>
                <th>Produit 2</th>
                <th>Produit 3</th>
                <th>Produit 4</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for item in data %}
                <tr><td>{{ item['utilisateur'] }}</td>
                <td>{{ item['produit_1'] }}</td>
                <td>{{ item['produit_2'] }}</td>
                <td>{{ item['produit_3'] }}</td>
                <td>{{ item['produit_4'] }}</td>
                <td>{{ item['date'] }}</td><tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
