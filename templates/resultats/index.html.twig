{% extends 'base.html.twig' %}

{% block title %}Hello ResultatsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Les produits achet√©s par utilisateur</h3>
    <table>
        <thead>
            <tr>
                <th>{{ 'periode'|upper }}</th>
                <th>{{ 'points'|upper }}</th>
                <th>{{ 'euros'|upper }}</th>
            </tr>
        </thead>
        <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item['period'] }}</td>
                    <td>{{ item['points'] }}</td>
                    <td>{{ item['euros'] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
